<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Mastodon Test Suite" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="qaproject.CustomTestListener"/>
    </listeners>
    
    <!-- Group for Screenshot Demo tests -->
    <test name="Screenshot Demo Tests">
        <groups>
            <run>
                <include name="screenshotDemo"/>
            </run>
        </groups>
        <classes>
            <class name="qaproject.ScreenshotDemoTest"/>
        </classes>
    </test>
    
    <!-- Group for CSS Selector based tests -->
    <test name="CSS Selector Tests">
        <groups>
            <run>
                <include name="cssTests"/>
            </run>
        </groups>
        <classes>
            <class name="qaproject.CSSSelectorMastodonTest"/>
        </classes>
    </test>
    
    <!-- Group for Form Interaction tests -->
    <test name="Form Interaction Tests">
        <groups>
            <run>
                <include name="formTests"/>
            </run>
        </groups>
        <classes>
            <class name="qaproject.MastodonFormInteractionTest"/>
        </classes>
    </test>
    
    <!-- Group for Element Selection tests -->
    <test name="Element Selection Tests">
        <groups>
            <run>
                <include name="selectionTests"/>
            </run>
        </groups>
        <classes>
            <class name="qaproject.MastodonSelectClassTest"/>
            <class name="qaproject.MastodonDropdownTest"/>
        </classes>
    </test>
    
    <!-- Group for Data Provider Tests -->
    <test name="Data Provider Tests">
        <groups>
            <run>
                <include name="dataTests"/>
            </run>
        </groups>
        <classes>
            <class name="qaproject.DataDrivenDemoTest"/>
        </classes>
    </test>
    
    <!-- Group for Exception and Timeout tests -->
    <test name="Exception and Timeout Tests">
        <groups>
            <run>
                <include name="exceptionTests"/>
            </run>
        </groups>
        <classes>
            <class name="qaproject.MastodonExceptionHandlingTests"/>
            <class name="qaproject.MastodonCustomExceptionTest"/>
        </classes>
    </test>
</suite>